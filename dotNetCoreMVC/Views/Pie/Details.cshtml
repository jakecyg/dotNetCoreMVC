@model Pie

<h2>@Model.Name</h2>
<h3><a asp-controller="Pie" asp-action="PieList">Back to list</a></h3>
<div class="thumbnail">
    <img alt="@Model.Name" src="@Model.ImageUrl" />
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price</h3>
        <h3>@Model.Name</h3>
        <h4>@Model.ShortDesc</h4>
        <p>@Model.LongDesc</p>
    </div>
</div>